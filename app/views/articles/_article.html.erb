<li>
  <div class="col s12 m6">
   <h5 class="header"><%= article.title %></h5>
  <div class="card horizontal" style = "font-weight: :500px;height:300px;">
  <% if article.image != "" %>
  <div class ="card-image">
    <img src ="<%= article.image %>" style ="width: 600px;height:300px;">
  </div>
  <% end %>
  <div class="card-stacked">
   <div class ="card-content" style = "color:gray;min-height: 225px;">
  <p><%= article.content %></p>
  </div>
  <% if user_signed_in? %>
  <div class ="card-action">
    <a class ="btn" href="/articles/<%= article.id %>/edit" style ="background-color: black;font-size: 15px;border: 2px double #fff;">Edit</a>
    <a class ="btn" data-method="delete" href="/articles/<%= article.id %>" style ="background: black;font-size: 15px;border: 2px double #fff;">Destroy</a>
  </div>
  <% end %>
</li>