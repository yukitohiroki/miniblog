<div class="contents row" style = "width: 700px;">
  <h4>New article</h4>
    <%= form_for @articles do |f| %>
      <p>
        <%= f.label :image, "image" %><br>
        <%= f.text_area :image,placeholder: 'Url link' %>
      </p>
      <p>
        <%= f.label :title, "title" %><br>
        <%= f.text_area :title,placeholder: 'Half size upper case'  %>
      </p>
      <p>
        <%= f.label :content, "content" %><br>
        <%= f.text_area :content,placeholder: '200 characters or less',style: 'width: 100%;height: 300px;' %> <% if @validatable %><i>(<%= @maximum_content_length %> characters maximum)</i><% end %><br />
      </p>
      <button class="btn waves-effect waves-light" type="submit" name="action" style ="background: black;font-size: 15px;border: 2px double #fff;">
        <%= f.submit "submit",style: 'background:black;color:white;' %>
      </button>
      <a class="btn" href="/" style ="background: rgba(255,255,255,.7);color: #000;font-size: 15px;border: 2px double #fff;">Back</a>
  <% end %>
</div>
