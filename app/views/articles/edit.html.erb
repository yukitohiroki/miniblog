<div class="contents row">
  <h4>Edit article</h4>
    <%= form_for @articles do |f| %>
      <p>
        <%= f.label :image, "image url" %><br>
        <%= f.text_area :image %>
      </p>
      <p>
        <%= f.label :title, "title" %><br>
        <%= f.text_area :title %>
      </p>
      <p>
        <%= f.label :content, "content" %><br>
        <%= f.text_area :content %>
      </p>
    <button class="btn" type="submit" name="action" style ="background: #263238;color: white;font-size: 20px;border: 2px double #fff;">Submit
    </button>
    <a class="btn" href="/" style ="background: #263238;color: white;font-size: 20px;border: 2px double #fff;">back</a></br>
    <% end %>
</div>
